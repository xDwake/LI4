@page "/loja/{lojaPath}/Produtos/{idProduto}/Oferta"
@model EletroExpo.Pages.PageOfertaModel
@{
}
<br>
@if (Model.rejectMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.rejectMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
else if (Model.acceptMessage.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@Model.acceptMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        </div>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Faça Uma Oferta:</label>
        <div class="col-sm-3">
            <input type="number" class="form-control" name="valor" value="@Model.offer.valor">
        </div>
    </div>
</form>
<div class="row mb-3">
    <div class="offset-sm-3 col-sm-3 d-grid">
        <button type="submit" class="btn btn-primary">Fazer Oferta</button>
    </div>
</div>