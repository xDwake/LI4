@page
@model EletroExpo.Pages.Utilizadores.EditModel
@{
}

<br>
<h2>Editar Utilizador</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <input type="hidden" name="username" value="@Model.utilizadorInfo.username">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Insira o Username</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="username" value="@Model.utilizadorInfo.username">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Insira o Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.utilizadorInfo.email">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Insira a Password</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="password" value="@Model.utilizadorInfo.password">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>  
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancelar</a>
        </div>
    </div>
</form>
